                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
        

                <div class="form-group row mt-2">
                    <label class="col-lg-3 col-form-label form-control-label size">Họ tên</label>
                    <div class="col-lg-9">
                        <input class="form-control" name="Name" type="email" value="" id="Name" >
                    </div>
                </div>
            
                <div class="form-group row mt-2">
                    <label class="col-lg-3 col-form-label form-control-label size">Số điện thoại</label>
                    <div class="col-lg-9">
                        <input class="form-control" name="Phone" type="email" value="0" id="Phone">
                    </div>
                </div>
                <div class="form-group row mt-2">
                    <label class="col-lg-3 col-form-label form-control-label size">Email</label>
                    <div class="col-lg-9">
                        <input class="form-control" name="Email" type="email" value="" id="Email" >
                    </div>
                </div>
