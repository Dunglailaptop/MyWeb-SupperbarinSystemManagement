<script>



    function onchange_active() {
        //Script Onchange
        showSuccess("Onchange", 2000);
    }
    $(document).ready(function () {
        function load_data() {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("loaddata", "Courses")',
                data: {},
                success: function (data) {
                    $('#databody').html(data);
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }
            });
        }
        load_data();
    });

</script>